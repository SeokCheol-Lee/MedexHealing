<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/usercircle"
        android:paddingTop="20dp"
        android:layout_marginTop="50dp"
        android:layout_width="269dp"
        android:layout_height="213dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/baseline_account_circle_24" />

    <EditText
        android:id="@+id/serial_num"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usercircle"
        android:hint="아이디"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/recborder"/>

    <EditText
        android:id="@+id/passwd"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/serial_num"
        android:hint="비밀번호"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/recborder"
        android:inputType="textPassword"/>

    <CheckBox
        android:layout_below="@+id/passwd"
        android:id="@+id/autologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자동로그인"
        android:layout_marginLeft="30dp"/>

    <Button
        android:id="@+id/fdpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/autologin"
        android:layout_below="@+id/passwd"
        android:layout_marginLeft="150dp"
        android:background="#FFFFF"
        android:text="비밀번호찾기"
        android:textColor="#000000"/>
    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:text="로그인"
        android:backgroundTint="#000000"/>


</RelativeLayout>
