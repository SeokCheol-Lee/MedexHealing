<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindActivity"
    android:background="@color/black">

    <TextView
        android:id="@+id/ph_text2"
        style="@style/titleText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="191dp"
        android:fontFamily="@font/nsr"
        android:text="아이디"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/ph_text"
        style="@style/titleText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/nsr"
        android:text="휴대전화 번호"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/ipphone"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/ph_text"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/recborder"
        android:ems="20"
        android:fontFamily="@font/nsr"
        android:hint="010 -"
        android:inputType="phone"
        android:padding="10dp" />

    <EditText
        android:id="@+id/et_fpid"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/ph_text"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="122dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/recborder"
        android:ems="20"
        android:fontFamily="@font/nsr"
        android:padding="10dp" />

    <Button
        android:id="@+id/succ_btn"
        style="@style/titleText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ipphone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="298dp"
        android:backgroundTint="@color/main_green"
        android:fontFamily="@font/nsr"
        android:text="확인" />

    <Button
        android:id="@+id/gotologin_btn"
        style="@style/titleText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/main_green"
        android:layout_below="@+id/succ_btn"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="130dp"
        android:text="로그인 화면으로"
        android:textColor="@color/black" />


</RelativeLayout>